<!doctype html>

<html>
	<head>
		<title>RUHereYet</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="/css/menu.css" rel="stylesheet">
	</head>
	<body>
		<div class="dropdownMC">
  			<button id="dropbtn">Menu</button>
  			<div id="myDropdown" class="dropdown-content">
    			<a href="/home">Home</a>
    			<a href="meetingsCreated">Meetings Created</a>
    			<a href="meetingsJoined">Meetings Joined</a>
    			<a href="friends">Friends</a>
    			<a href="profile.html">Profile</a>
  			</div>
		</div>

		<h3 class="headerMC">Meetings Created</h3>
		<ul id= "meetingList">
			{{#each meetingsCreated}}
			<li class = "listElements"> You created the meeting: {{meetingName}} at {{time}}</li>
			<br>
			{{/each}}
		</ul>

		<form id="meetingDelete" class="form" role="form" method="get" action='/deleteMeeting'>
			<label for="deleteMeeting">Choose a Meeting to Delete:</label>
          <input type="text" name="deleteMeeting" placeholder="Enter Name of Meeting"></input>
          <input type="submit" class="btn btn-default" value="Delete"></input>
        </form>

		<script src="/js/menu.js"></script>
	</body>
</html>